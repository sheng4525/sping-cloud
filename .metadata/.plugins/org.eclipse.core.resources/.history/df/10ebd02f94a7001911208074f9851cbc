spring.application.name=stream-delayed-message
server.port=8080

spring.rabbitmq.host=localhost
spring.rabbitmq.port=5672
spring.rabbitmq.username=guest
spring.rabbitmq.password=guest


#
spring.cloud.stream.bindings.pengsheng-topic-output.destination=pengsheng-topic 
spring.cloud.stream.rabbit.bindings.pengsheng-topic-output.producer.delayed-exchange=true


spring.cloud.stream.bindings.pengsheng-topic-input.destination=pengsheng-topic
spring.cloud.stream.bindings.pengsheng-topic-input.group=test #消息分组
spring.cloud.stream.rabbit.bindings.pengsheng-topic-input.consumer.delayed-exchange=true #是否开启消息延迟
